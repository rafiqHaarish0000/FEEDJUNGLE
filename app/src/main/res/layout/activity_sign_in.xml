<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.LoginActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView"
                    style="@style/headText_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Sign Up" />

                <TextView
                    android:id="@+id/textView4"
                    style="@style/h3text_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add your details to sign up" />

                <EditText
                    android:id="@+id/mfull_name"
                    style="@style/edittext_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:ems="20"
                    android:layout_marginTop="24dp"
                    android:layout_gravity="center"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/isEmailValid"
                    style="@style/edittext_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:hint="Email"
                    android:ems="20"
                    android:layout_gravity="center"
                    android:inputType="textEmailAddress" />
                <EditText
                    android:id="@+id/mIsValidMN"
                    style="@style/edittext_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:hint="Mobile number"
                    android:ems="20"
                    android:layout_gravity="center"
                    android:inputType="number" />
                <EditText
                    android:id="@+id/mAddress"
                    style="@style/edittext_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:hint="Address"
                    android:ems="20"
                    android:layout_gravity="center"
                    android:inputType="text" />
                <EditText
                    android:id="@+id/mPassword"
                    style="@style/edittext_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:hint="Password"
                    android:ems="20"
                    android:layout_gravity="center"
                    android:inputType="textPassword" />
                <EditText
                    android:id="@+id/mC_Password"
                    style="@style/edittext_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:hint="Confirm password"
                    android:ems="20"
                    android:layout_gravity="center"
                    android:inputType="textPassword" />
                <Button
                    android:id="@+id/signIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_gravity="center"
                    android:ems="18"
                    android:fontFamily="@font/pr"
                    android:background="@drawable/btn_lyt"
                    android:text="Login" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/h3text_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="Already  have an Account?" />

                    <TextView
                        android:id="@+id/backtologin"
                        style="@style/h3text_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:layout_marginLeft="6dp"
                        android:textColor="@color/main_cl"
                        android:text="Login" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>




    </LinearLayout>
</layout>